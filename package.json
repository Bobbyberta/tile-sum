{
  "name": "tile-sum",
  "version": "1.0.0",
  "description": "Daily word puzzle game - Scrabble anagram challenges",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/styles.css -o styles.css",
    "watch:css": "postcss src/styles.css -o styles.css --watch",
    "build:data": "node scripts/encode-puzzle-data.js",
    "build:all": "npm run build:css && npm run build:data",
    "update-rules": "node scripts/update-cursor-rules.js",
    "validate-rules": "node scripts/update-cursor-rules.js",
    "validate:anagrams": "node scripts/validation/check-anagrams.js",
    "validate:scores": "node scripts/validation/check-scores.js",
    "validate:alternatives": "node scripts/validation/check-alternative-solutions.js",
    "remove:alternatives": "node scripts/validation/remove-alternative-puzzles.js",
    "generate:puzzles": "node scripts/validation/generate-puzzles.js",
    "fix:scores": "node scripts/validation/fix-duplicate-scores.js",
    "apply:scores": "node scripts/validation/apply-score-replacements.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "lsof -ti:8000 | xargs kill -9 || true && playwright test tests/e2e/accessibility.spec.js",
    "test:all": "npm run test && npm run test:e2e",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:outdated": "npm outdated",
    "security:check": "npm audit && npm outdated"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.20",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13",
    "vitest": "^4.0.17"
  }
}
